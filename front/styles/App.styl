body
    background: #D1D1D1

.code_info
    & > button.close
        cursor: pointer
        position:absolute
        top:0
        right:0
        background: #757575
        color: white
        font-size: .5rem
        padding: .2rem
        border: none
    & > header
        max-width: 400px
        font-size: 1.5rem
        word-wrap: break-word
    & > content
        max-width: 400px
        display: flex
        flex-wrap: wrap

        & > p
            flex 1 0 50%
            margin-bottom: 0.5rem

.app
    margin: 0.5rem
    display: flex
    align-items: center
    flex-direction: column

    & > form
        box-shadow: 3px 3px 3px 4px rgba(0, 0, 0, 0.4)
        margin-bottom: 2em
        & > input
            border: 1px solid #ccc
            padding: .4em
            border-radius: 2px

    & > table
        flex: 1 0
        min-width: 80%
        box-shadow: 3px 3px 3px 4px rgba(0, 0, 0, 0.4)
        background: #f3f3f3
        border-radius: 0.2rem
        padding: 0
        margin: 0
        border: none

        & > tr
            padding: 0
            margin: 0
            &:nth-child(odd)
                background: #adadad

            &:nth-child(1)
                background: #333
                color: #fff

            & > th, td
                padding: 0.2em

            & > th
                font-size: 2em

            & > td
                word-wrap: break-word
                cursor: pointer

                &:hover
                    background: #5f8da2

                &:nth-child(1)
                    font-weight: bold

